<html t:type="layout" title="t5 Index"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter"
        >
<t:link.LinkInSource/>

<div style="width: 25%">
    <!--<t:beaneditform object="source"/></div>-->

    <t:form>
        <t:checkbox t:id="newGroup" onclick="this.form.submit();"/> <t:label for="newGroup">Новая група</t:label>
    </t:form>
    <form t:type="form"  t:id="createSource">
        <t:errors/>
        <table class="grid">
            <tbody>
            <t:if test="newGroup">
            <tr>
                <td>Группа</td>
                <td><input t:id="group" t:type="TextField" t:value="group"></input></td>
            </tr>
                <p:else>
                    <tr>
                        <td>Группа</td>
                        <td><input t:id="groups" t:type="select" model="modelGroup" t:value="group"></input></td>
                    </tr>
                </p:else>
            </t:if>
            <tr>
                <td>Наименование</td>
                <td><input t:id="name" t:type="TextField" t:value="name"></input></td>
            </tr>
            <tr>
                <td>Инвентарный номер</td>
                <td><input t:id="code" t:type="TextField" t:value="code"/></td>
            </tr>
            <tr>
                <td>Еденицы измерения</td>
                <td><input t:id="units" t:type="select"  t:value="units"/></td>
            </tr>
            <tr>
                <td>Альтернативные еденицы измерения</td>
                <td><input t:id="alternativUnits" t:type="select"  t:value="alternativUnits"/></td>
            </tr>
            <tr>
                <td>Коефициент перевода</td>
                <td><input t:id="rate" t:type="TextField" t:value="rate"/></td>
            </tr>
            <!--<tr>-->
                <!--<td>Поставщик</td>-->
                <!--<td><input t:id="provider" t:type="select" model="selectModel"  t:value="providerId"/></td>-->
            <!--</tr>-->
            </tbody>
        </table>
        <input t:type="submit" value="Сохранить"/>
    </form>
</div>
</html>